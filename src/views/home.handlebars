<!-- Contenedor Principal -->
<div class="p-8 w-full flex justify-center">
    <div class="w-1/2 flex justify-between space-x-8">

      <!-- Lista de Productos -->
      <div class="w-full bg-gray-800 p-6 rounded-lg shadow-lg space-y-6 text-center">
        <nav>
            {{!-- Diseño moderno de un botón para que sea "Agregar" y redirga a realTimeProducts --}}
            <a href="/realTimeProducts" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ">Agregar</a>
        </nav>
      
        <h2 class="text-3xl font-semibold text-center text-gray-100">Lista de Productos</h2>

        <div class="space-y-4" id="productList">
          {{#each products}}
            <div class="flex justify-between items-center bg-gray-700 p-4 rounded-lg">
              <div class="flex items-center space-x-4">
                <img src="{{this.thumbnails}}" alt="{{this.title}}" class="w-20 h-20 object-cover rounded-md">
                <div class="text-white">
                  <p class="font-semibold text-lg">{{this.title}}</p>
                  <p class="text-sm text-gray-400">${{this.price}}</p>
                </div>
              </div>
            </div>
          {{else}}
            <p class="text-center text-gray-400">No hay productos disponibles.</p>
          {{/each}}
        </div>
      </div>
</div>
